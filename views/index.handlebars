        {{this.id}}. {{this.burger_name}}
        <button data-burgerid="{{this.id}}" class="delBurger">Digest it!</button>
      </p>
    </li>
  {{/each}}
</ul>
  </div>
 </div>
 <div class = "row">
  <form>
    <div class="form-group">
        <input type="text" class="form-control" id="burgerInput" aria-describedby="emailHelp">
    </div>
    <button type="submit" id = "submitBurger" class="generic btn-primary">Submit</button>
  </form>
 </div>
 <div>
     <p>Enter a burger you want to eat, then click the "Submit" button</p>
 </div>
</div>
