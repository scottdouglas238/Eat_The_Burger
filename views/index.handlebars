 <div class = "row">
  <div class = "col-6-md">
   <ul>
  {{#each burgers}}
    <li>
      <p>
        {{this.id}}. {{this.burger_name}}
        <button data-burgerid="{{this.id}}" class="eatBurger">Eat it!</button>
      </p>
    </li>
  {{/each}}
</ul>
  </div>
  <div class = "col-6-md">
<ul>
  {{#each burgers}}
